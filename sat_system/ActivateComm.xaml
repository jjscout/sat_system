<Window x:Class="sat_system.ActivateComm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sat_system"
        mc:Ignorable="d"
        Title="ActivateComm" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="sourcePointX" HorizontalAlignment="Left" Height="33" Margin="136,40,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="61"/>
        <TextBox x:Name="destPointX" HorizontalAlignment="Left" Height="36" Margin="136,90,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="61"/>
        <Button x:Name="Send" Content="send" HorizontalAlignment="Left" Height="36" Margin="43,73,0,0" VerticalAlignment="Top" Width="55" Click="Send_Click"/>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Height="70" Margin="54,161,0,0" VerticalAlignment="Top" Width="208"/>
        <TextBox x:Name="sourcePointY" HorizontalAlignment="Left" Height="33" Margin="231,40,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="61"/>
        <TextBox x:Name="destPointY" HorizontalAlignment="Left" Height="36" Margin="231,90,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="61"/>

    </Grid>
</Window>
